<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- First Character -->
        <TextView
            android:id="@+id/saved_first_character"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/saved_character"
            android:gravity="center"
            android:layout_gravity="center"
            tools:text="C"
            android:textSize="22pt"
            android:textAllCaps="false" />

        <!-- Name -->
        <TextView
            android:id="@+id/saved_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_gravity="center"
            tools:text="Full Name"
            android:textSize="14pt"
            android:textAllCaps="false" />

        <!-- Email -->
        <TextView
            android:id="@+id/saved_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_gravity="center"
            tools:text="\@email"
            android:textAllCaps="false" />

        <!-- Followers -->
        <TextView
            android:id="@+id/saved_followers_and_following"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_gravity="center"
            tools:text="0 followers - 0 following"
            android:textAllCaps="false" />


        <!-- Saved Items -->
        <TextView
            android:id="@+id/saved_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="13pt"
            android:text="@string/saved_items"
            android:textAllCaps="false" />

        <!-- Saved Category Items -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/saved_category_items"
            android:layout_height="500dp"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            app:spanCount="2"/>

    </LinearLayout>
</ScrollView>